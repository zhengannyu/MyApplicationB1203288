<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".favorite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background_gray">

        <!-- 頂部標題欄 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/red_primary"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/back"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/like_store"
                android:textColor="@android:color/white"
                android:textSize="34sp"
                android:textStyle="bold" />

            <View
                android:layout_width="24dp"
                android:layout_height="24dp" />

        </LinearLayout>

        <!-- 店家列表 -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical">

                <!-- 店家項目1 - 真有料 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_shop_item"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/cup" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/really_interesting"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/hofhghvi3156shilin_taipei"
                            android:textColor="@color/text_secondary"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/_0_200"
                            android:textColor="@color/text_secondary"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <ToggleButton
                        android:id="@+id/favoriteToggleButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/toggle_button_selector"
                        android:checked="false"
                        android:contentDescription="@string/favoritestore"
                        android:textOff=""
                        android:textOn="" />

                </LinearLayout>

                <!-- 店家項目2 - 士林麵包超人 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_shop_item"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/noodles2" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/shilin_breadman"
                                android:textColor="@color/text_primary"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/bg_yellow_tag"
                                android:paddingHorizontal="6dp"
                                android:paddingVertical="2dp"
                                android:text="@string/cp_up"
                                android:textColor="@color/yellow_dark"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/hofhghvi3156shilintaipei"
                            android:textColor="@color/text_secondary"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/_0_2000"
                            android:textColor="@color/text_secondary"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <ToggleButton
                        android:id="@+id/button2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/toggle_button_selector"
                        android:checked="false"
                        android:contentDescription="@string/favoritestore"
                        android:textOff=""
                        android:textOn="" />

                </LinearLayout>

                <!-- 店家項目3 - 士林大香腸 (選中狀態) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_shop_item_selected"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/bacon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/shilin_big_sausage"
                                android:textColor="@color/text_primary"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/bg_yellow_tag"
                                android:paddingHorizontal="6dp"
                                android:paddingVertical="2dp"
                                android:text="@string/cpup"
                                android:textColor="@color/yellow_dark"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/hofhghvi3156shilintaipeii"
                            android:textColor="@color/text_secondary"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/_0_20000"
                            android:textColor="@color/text_secondary"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <ToggleButton
                        android:id="@+id/button3"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/toggle_button_selector"
                        android:checked="false"
                        android:contentDescription="@string/favoritestore"
                        android:textOff=""
                        android:textOn="" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <!-- 底部導航欄 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/bottom_nav_bg"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="32dp">

            <ImageView
                android:id="@+id/nav_chat"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:contentDescription="@string/nav_chat"
                android:scaleType="centerInside"
                android:src="@drawable/chat" />

            <ImageView
                android:id="@+id/nav_favorite"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:contentDescription="@string/nav_favorite"
                android:scaleType="centerInside"
                android:src="@drawable/heart" />

            <ImageView
                android:id="@+id/nav_discover"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:contentDescription="@string/nav_discover"
                android:scaleType="centerInside"
                android:src="@drawable/find" />

            <ImageView
                android:id="@+id/nav_points"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:contentDescription="@string/nav_points"
                android:scaleType="centerInside"
                android:src="@drawable/dot" />

            <ImageView
                android:id="@+id/nav_settings"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:contentDescription="@string/nav_settings"
                android:scaleType="centerInside"
                android:src="@drawable/settings" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>